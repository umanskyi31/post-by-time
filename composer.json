{
    "name": "post-by-time",
    "description": "Telegram bot which send notification",
    "authors": [
        {
            "name": "Vlad Umanskyi",
            "email": "vladumanskyi@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0"
    },
    "autoload": {
        "psr-4": {
            "Notification\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts" : {
        "post-root-package-install" : [
            "@php -r \"file_exists(.env) || copy('.env.example', '.env');\""
        ]
    }
}
